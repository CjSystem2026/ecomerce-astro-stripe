{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "singularName": "producto",
    "pluralName": "productos",
    "displayName": "producto"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "nombre"
    },
    "descripcion": {
      "type": "blocks"
    },
    "precio": {
      "type": "decimal"
    },
    "precioOferta": {
      "type": "decimal"
    },
    "stock": {
      "type": "integer"
    },
    "destacado": {
      "type": "boolean"
    },
    "imagen": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "categoria": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::categoria.categoria",
      "inversedBy": "productos"
    }
  }
}
