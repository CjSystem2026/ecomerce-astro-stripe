  /* Orbes de fondo */
  .hero__orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(90px);
    pointer-events: none;
    z-index: 0;
  }
  .hero__orb--1 {
    width: 520px;
    height: 520px;
    background: radial-gradient(
      circle,
      rgba(124, 58, 237, 0.2),
      transparent 70%
    );
    top: -100px;
    right: -100px;
    animation: orb 12s infinite alternate ease-in-out;
  }
  .hero__orb--2 {
    width: 380px;
    height: 380px;
    background: radial-gradient(
