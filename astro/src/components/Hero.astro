    }
  }

  /* Layout grid */
  .hero__container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  /* Contenido */
  .hero__content {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  /* Badge */
  .hero__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 1rem;
    background: rgba(124, 58, 237, 0.12);
    border: 1px solid rgba(124, 58, 237, 0.3);
    color: #a78bfa;
    border-radius: 999px;
    font-size: 0.78rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 1.5rem;
    width: fit-content;
  }
  .badge__dot {
    width: 7px;
    height: 7px;
    background: #a78bfa;
    border-radius: 50%;
    animation: blink 2s infinite;
  }
  @keyframes blink {
    0%,
