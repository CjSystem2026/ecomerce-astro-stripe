---
import type { Product } from "@/types/strapi";
import { getStrapiImageUrl } from "@/lib/strapi";

interface Props {
  product: Product;
}

const { product } = Astro.props;
const productImg = Array.isArray(product.imagen)
  ? product.imagen[0]
  : product.imagen;
const imageUrl = getStrapiImageUrl(productImg?.url);
const hasDiscount =
  product.precioOferta && product.precioOferta < product.precio;
const discountPercent = hasDiscount
  ? Math.round(
      ((product.precio - product.precioOferta!) / product.precio) * 100,
    )
  : 0;
---

<article class="product-card">
  <a href={`/productos/${product.slug}`} class="product-card__image-link">
    <img
      src={imageUrl}
      alt={productImg?.alternativeText ?? product.nombre}
      width="400"
      height="300"
      loading="lazy"
    />
    {
      hasDiscount && (
        <span class="product-card__badge">-{discountPercent}%</span>
      )
    }
  </a>

  <div class="product-card__body">
    {
      product.categoria && (
        <span class="product-card__category">{product.categoria.nombre}</span>
      )
    }
    <h3 class="product-card__title">
      <a href={`/productos/${product.slug}`}>{product.nombre}</a>
    </h3>

    <div class="product-card__pricing">
      {
        hasDiscount ? (
          <>
            <span class="product-card__price product-card__price--sale">
              S/ {product.precioOferta!.toFixed(2)}
            </span>
            <span class="product-card__price product-card__price--original">
              S/ {product.precio.toFixed(2)}
            </span>
          </>
        ) : (
          <span class="product-card__price">
            S/ {product.precio.toFixed(2)}
          </span>
        )
      }
    </div>

    <button
      class="product-card__btn"
      data-product-id={product.documentId}
      data-product-name={product.nombre}
      data-product-price={hasDiscount ? product.precioOferta : product.precio}
      data-product-image={imageUrl}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"
        ></circle>
        <path
          d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"
        ></path>
      </svg>
      Añadir al carrito
    </button>
  </div>
</article>

<style>
  .product-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition:
      transform var(--transition),
      box-shadow var(--transition),
      border-color var(--transition);
    box-shadow: var(--shadow-card);
    animation: card-in 0.5s both;
  }

  @keyframes card-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .product-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-card-hover);
    border-color: var(--border-hover);
  }

  /* Image */
  .product-card__image-link {
    position: relative;
    display: block;
    overflow: hidden;
    aspect-ratio: 4/3;
    background: var(--surface-2);
  }

  .product-card__image-link img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-card:hover .product-card__image-link img {
    transform: scale(1.08);
  }

  /* Overlay al hover */
  .product-card__image-link::after {
    content: "Ver producto →";
    position: absolute;
    inset: 0;
    background: rgba(124, 58, 237, 0.7);
    color: white;
    font-size: 0.9rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition);
    backdrop-filter: blur(4px);
  }

  .product-card:hover .product-card__image-link::after {
    opacity: 1;
  }

  /* Badge descuento */
  .product-card__badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: var(--gradient-primary);
    color: white;
    font-size: 0.72rem;
    font-weight: 700;
    padding: 4px 10px;
    border-radius: 999px;
    z-index: 1;
    box-shadow: 0 4px 12px rgba(244, 63, 94, 0.4);
  }

  /* Body */
  .product-card__body {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
  }

  .product-card__category {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--primary-light);
    font-weight: 700;
  }

  .product-card__title {
    font-size: 1rem;
    font-weight: 700;
    line-height: 1.35;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-card__title a {
    color: var(--text);
    text-decoration: none;
    transition: color var(--transition);
  }

  .product-card__title a:hover {
    color: var(--primary-light);
  }

  /* Pricing */
  .product-card__pricing {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    margin-top: auto;
    padding-top: 0.5rem;
  }

  .product-card__price {
    font-size: 1.3rem;
    font-weight: 800;
    color: var(--text);
    letter-spacing: -0.02em;
  }

  .product-card__price--sale {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .product-card__price--original {
    font-size: 0.85rem;
    font-weight: 400;
    color: var(--text-subtle);
    text-decoration: line-through;
  }

  /* Button */
  .product-card__btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    padding: 0.8rem 1rem;
    background: var(--surface-2);
    color: var(--text);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition);
    margin-top: 0.75rem;
    position: relative;
    overflow: hidden;
  }

  .product-card__btn::before {
    content: "";
    position: absolute;
    inset: 0;
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity var(--transition);
  }

  .product-card__btn:hover {
    border-color: transparent;
    color: white;
    transform: translateY(-1px);
    box-shadow: 0 6px 16px rgba(124, 58, 237, 0.35);
  }

  .product-card__btn:hover::before {
    opacity: 1;
  }

  .product-card__btn > * {
    position: relative;
    z-index: 1;
  }

  .product-card__btn:active {
    transform: scale(0.97);
  }
</style>
