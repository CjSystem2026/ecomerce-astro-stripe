---
const trusts = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="M12 5c7.2 2 9 6.5 9 9H3c0-2.5 1.8-7 9-9z"/><path d="M12 19v-7"/></svg>`,
    title: "Envío Express",
    desc: "Entrega en 48 horas",
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="5" rx="2"/><line x1="2" x2="22" y1="10" y2="10"/></svg>`,
    title: "Pago Seguro",
    desc: "Yape, Plin, transferencia",
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><path d="M3 3v5h5"/></svg>`,
    title: "30 Días",
    desc: "Garantía de devolución",
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>`,
    title: "4.9 ★  Opiniones",
    desc: "+10,000 clientes satisfechos",
  },
];
---

<div class="trust-bar">
  <div class="container">
    <div class="trust-bar__grid">
      {
        trusts.map((t) => (
          <div class="trust-item">
            <div class="trust-item__icon" set:html={t.icon} />
            <div class="trust-item__text">
              <strong>{t.title}</strong>
              <span>{t.desc}</span>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  .trust-bar {
    background: var(--surface);
    border-top: 1px solid var(--border);
    border-bottom: 1px solid var(--border);
    padding: 1rem 0;
  }

  .trust-bar__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.6rem 1rem;
    border-radius: var(--radius);
    transition: background var(--transition);
  }

  .trust-item:hover {
    background: var(--surface-2);
  }

  .trust-item__icon {
    color: var(--primary-light);
    flex-shrink: 0;
    display: flex;
    align-items: center;
  }

  .trust-item__text {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
  }

  .trust-item__text strong {
    font-size: 0.88rem;
    font-weight: 700;
    color: var(--text);
  }

  .trust-item__text span {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .trust-bar__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .trust-bar__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
