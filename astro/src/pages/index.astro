    padding: 4rem 0;
  }
  .section--bestsellers {
    padding: 3rem 0 4rem;
  }
  .section--reviews {
    background: var(--surface);
    padding: 4rem 0;
  }

  .section-header {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    margin-bottom: 2rem;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .section-eyebrow {
    display: block;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--primary);
    margin-bottom: 0.35rem;
  }
  .section-title {
    font-size: clamp(1.4rem, 3vw, 1.9rem);
    font-weight: 800;
    margin: 0;
  }
  .link-ver-todos {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--primary);
    text-decoration: none;
    white-space: nowrap;
    transition: opacity 0.2s;
  }
  .link-ver-todos:hover {
    opacity: 0.7;
  }

  /* â”€â”€ Bestseller badges â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
