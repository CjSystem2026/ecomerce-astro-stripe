    position: relative;
  }

  .bestseller-badge {
    position: absolute;
    top: -10px;
    left: 12px;
    z-index: 10;
    background: var(--primary);
    color: white;
    font-size: 0.7rem;
    font-weight: 800;
    padding: 4px 10px;
    border-radius: 999px;
    letter-spacing: 0.03em;
    box-shadow: 0 4px 12px rgba(236, 55, 19, 0.3);
    white-space: nowrap;
  }
  .bestseller-badge--2 {
    background: #7c3aed;
    box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
  }
  .bestseller-badge--3 {
    background: #d97706;
    box-shadow: 0 4px 12px rgba(217, 119, 6, 0.3);
  }

  /* â”€â”€ Products grid â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 1.5rem;
  }
  .products-grid--hero {
    grid-template-columns: repeat(3, 1fr);
    gap: 1.75rem;
  }

  /* â”€â”€ Reviews â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }
  .review-card {
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: var(--radius-xl);
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
  }
  .review-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow);
  }
  .review-stars {
    color: #f59e0b;
    font-size: 1rem;
    letter-spacing: 2px;
  }
  .review-text {
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.7;
    font-style: italic;
    flex: 1;
  }
  .review-author {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.25rem;
  }
  .review-avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: var(--primary-glow);
    color: var(--primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 800;
    font-size: 0.9rem;
    flex-shrink: 0;
  }
  .review-author strong {
    display: block;
    font-size: 0.88rem;
  }
  .review-author span {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  /* â”€â”€ CTA Banner â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .cta-banner {
    padding: 4rem 0 5rem;
  }
  .cta-banner__content {
    background: var(--primary);
    border-radius: var(--radius-xl);
    padding: 3.5rem 2.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1rem;
    position: relative;
    overflow: hidden;
  }
  .cta-banner__content::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at top right,
      rgba(255, 255, 255, 0.15),
      transparent 60%
    );
    pointer-events: none;
  }
  .cta-banner__dots {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.1) 1px,
      transparent 1px
    );
    background-size: 24px 24px;
    pointer-events: none;
  }
  .cta-banner__eyebrow {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.7);
    position: relative;
  }
  .cta-banner__content h2 {
    font-size: clamp(1.5rem, 3vw, 2.2rem);
    font-weight: 900;
    color: white;
    position: relative;
    letter-spacing: -0.02em;
  }
  .cta-banner__content p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1rem;
    max-width: 480px;
    position: relative;
  }
  .cta-banner__actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    position: relative;
    margin-top: 0.5rem;
  }
  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: white;
    color: var(--primary);
    padding: 0.9rem 2rem;
    border-radius: var(--radius);
    font-weight: 800;
    font-size: 0.95rem;
    text-decoration: none;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    transition: all 0.25s ease;
  }
  .cta-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.2);
  }
  .cta-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.15);
    color: white;
    padding: 0.9rem 2rem;
    border-radius: var(--radius);
    font-weight: 700;
    font-size: 0.95rem;
    text-decoration: none;
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: background 0.2s;
  }
  .cta-secondary:hover {
    background: rgba(255, 255, 255, 0.25);
  }

  /* â”€â”€ Empty state â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .empty-state {
    text-align: center;
    padding: 3rem 2rem;
    background: var(--surface);
    border: 1px dashed var(--border);
    border-radius: var(--radius-lg);
    color: var(--text-muted);
    font-size: 1rem;
  }

  /* â”€â”€ Responsive â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  @media (max-width: 900px) {
    .products-grid--hero {
      grid-template-columns: 1fr 1fr;
    }
    .reviews-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
  @media (max-width: 600px) {
    .products-grid--hero {
      grid-template-columns: 1fr;
    }
    .cta-banner__content {
      padding: 2.5rem 1.5rem;
    }
    .cta-banner__actions {
      flex-direction: column;
      align-items: stretch;
    }
    .cta-primary,
    .cta-secondary {
      text-align: center;
      justify-content: center;
    }
  }
</style>
