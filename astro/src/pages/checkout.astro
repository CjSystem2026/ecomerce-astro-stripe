    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  .option-item {
    position: relative;
    cursor: pointer;
    display: flex;
    align-items: center;
  }
  .option-item input[type="radio"] {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }
  .option-item__body {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 1rem 3rem 1rem 1.1rem;
    background: var(--bg);
    border: 1.5px solid var(--border);
    border-radius: var(--radius-lg);
    transition:
      border-color 0.2s,
      background 0.2s;
  }
  .option-item__body > div {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }
  .option-item__body strong {
    font-size: 0.9rem;
