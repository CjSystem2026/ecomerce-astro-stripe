<script
  define:vars={{
    strapiUrl: import.meta.env.PUBLIC_STRAPI_URL || "http://localhost:1337",
  }}
>
  function renderCheckout() {
    const summaryItems = document.getElementById("summary-items");
    const subtotalEl = document.getElementById("summary-subtotal");
    const totalEl = document.getElementById("summary-total");
    const form = document.getElementById("checkout-form");
    if (!summaryItems || !subtotalEl || !totalEl) return;

    let cart = [];
    try {
      cart = JSON.parse(localStorage.getItem("cart") || "[]");
    } catch (e) {
      localStorage.setItem("cart", "[]");
    }

    if (cart.length === 0) {
      window.location.href = "/carrito";
      return;
    }

    // Renderizar items
    let total = 0;
    summaryItems.innerHTML = cart
      .map((item) => {
        const p = parseFloat(item.price) || 0;
        const q = parseInt(item.qty) || 1;
        total += p * q;
        return `
        <div class="panel-item">
          <img src="${item.image}" alt="${item.name}" class="panel-item__img" />
          <div class="panel-item__info">
            <strong>${item.name}</strong>
            <span>x${q}</span>
          </div>
          <span class="panel-item__price">S/ ${(p * q).toFixed(2)}</span>
        </div>
      `;
      })
      .join("");

    subtotalEl.textContent = `S/ ${total.toFixed(2)}`;
    totalEl.textContent = `S/ ${total.toFixed(2)}`;

    // Interactividad de radio cards
    document.querySelectorAll(".option-list").forEach((list) => {
      list.querySelectorAll("label").forEach((label) => {
        const input = label.querySelector("input");
        input?.addEventListener("change", () => {
          list
            .querySelectorAll("label")
            .forEach((l) => l.classList.remove("checked"));
          label.classList.add("checked");
        });
      });
    });

    // Submit
    if (form) {
      form.onsubmit = async (e) => {
        e.preventDefault();
        const btns = document.querySelectorAll(".btn-confirm");
        btns.forEach(function (b) {
          b.disabled = true;
          b.textContent = "Procesando...";
        });

        const d = Object.fromEntries(new FormData(form));

        try {
          const res = await fetch(`${strapiUrl}/api/pedidos`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              data: {
                nombreCliente: d.name,
                emailCliente: d.email,
                telefonoCliente: d.phone,
                direccionEnvio: `${d.address}, ${d.district}, ${d.city}`,
                total,
                items: cart,
                estado: "pendiente",
              },
            }),
          });
          if (!res.ok) throw new Error("Error al guardar pedido");

          const txt = cart
            .map(function (i) {
              return `- ${i.name} (x${i.qty})`;
            })
            .join("\n");
          const msg = `*Pedido MiTienda*\n*Cliente:* ${d.name}\n\n*Productos:*\n${txt}\n\n*TOTAL: S/ ${total.toFixed(2)}*`;
          window.open(
            `https://wa.me/51925843268?text=${encodeURIComponent(msg)}`,
            "_blank",
          );

          localStorage.removeItem("cart");
          window.location.href = "/gracias";
        } catch (err) {
          alert("Error: " + err.message);
          btns.forEach(function (b) {
            b.disabled = false;
            b.textContent = "Confirmar Pedido";
          });
        }
      };
    }
  }

  document.addEventListener("astro:page-load", renderCheckout);
  if (document.readyState === "complete") renderCheckout();
</script>

<style is:global>
  .checkout-section {
    padding: 3rem 0 5rem;
  }

  /* ‚îÄ‚îÄ Pasos ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ */
