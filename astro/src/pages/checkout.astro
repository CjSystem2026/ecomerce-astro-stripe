    color: var(--primary);
  }
  .step--done {
    color: #16a34a;
  }
  .step__bubble {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 2px solid currentColor;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.8rem;
    font-weight: 800;
  }
  .step--active .step__bubble {
    background: var(--primary);
    color: #fff;
    border-color: var(--primary);
  }
  .step--done .step__bubble {
    background: #16a34a;
    color: #fff;
    border-color: #16a34a;
  }
  .step__line {
    flex: 1;
    max-width: 80px;
    height: 2px;
    background: var(--border);
    margin: 0 0.5rem 1.2rem;
