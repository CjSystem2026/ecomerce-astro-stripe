    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 2.5rem;
  }
  .step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.78rem;
    font-weight: 600;
    color: var(--text-subtle, #94a3b8);
  }
